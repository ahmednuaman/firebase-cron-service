{
  "name": "firebase-cron-service",
  "version": "1.0.0",
  "description": "Trigger stuff on Firebase with cronjobs (or something else)",
  "main": "index.js",
  "scripts": {
    "nodemon": "nodemon --exec babel-node -- ./index.js",
    "start": "babel-node ./index.js",
    "test": "standard",
    "watch": "concurrently 'npm run watch:js' 'npm run nodemon'",
    "watch:js": "onchange '*.js' 'lib/*.js' -- npm t"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmednuaman/firebase-cron-service.git"
  },
  "keywords": [],
  "author": "Ahmed Nuaman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ahmednuaman/firebase-cron-service/issues"
  },
  "homepage": "https://github.com/ahmednuaman/firebase-cron-service#readme",
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "firebase": "^3.6.10",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "concurrently": "^3.3.0",
    "nodemon": "^1.11.0",
    "onchange": "^3.2.1",
    "standard": "^8.6.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  }
